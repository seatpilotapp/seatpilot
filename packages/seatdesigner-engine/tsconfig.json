{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
