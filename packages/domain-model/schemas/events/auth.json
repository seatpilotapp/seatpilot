{
  "$id": "https://schemas.seatpilot.app/events/auth.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Seatpilot Auth & License Events",
  "oneOf": [
    {
      "title": "auth.login_success",
      "allOf": [
        {
          "$ref": "../envelope.v1.1.0.json"
        },
        {
          "type": "object",
          "properties": {
            "event_name": {
              "const": "auth.login_success"
            },
            "payload": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "user_id_hash",
                "method"
              ],
              "properties": {
                "user_id_hash": {
                  "type": "string"
                },
                "method": {
                  "type": "string",
                  "enum": [
                    "password",
                    "magic_link",
                    "sso"
                  ]
                },
                "tenant_role": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              }
            }
          }
        }
      ]
    },
    {
      "title": "auth.login_error",
      "allOf": [
        {
          "$ref": "../envelope.v1.1.0.json"
        },
        {
          "type": "object",
          "properties": {
            "event_name": {
              "const": "auth.login_error"
            },
            "payload": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "reason"
              ],
              "properties": {
                "reason": {
                  "type": "string",
                  "enum": [
                    "invalid_credentials",
                    "locked_out",
                    "expired_link",
                    "mfa_required"
                  ]
                },
                "user_id_hash": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              }
            }
          }
        }
      ]
    },
    {
      "title": "license.gate_denied",
      "allOf": [
        {
          "$ref": "../envelope.v1.1.0.json"
        },
        {
          "type": "object",
          "properties": {
            "event_name": {
              "const": "license.gate_denied"
            },
            "payload": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "feature",
                "plan",
                "limit"
              ],
              "properties": {
                "feature": {
                  "type": "string"
                },
                "plan": {
                  "type": "string"
                },
                "limit": {
                  "type": "string"
                },
                "usage": {
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 0
                }
              }
            }
          }
        }
      ]
    }
  ]
}
