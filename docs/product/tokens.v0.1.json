{
  "$schema": "https://json.schemastore.org/design-tokens.json",
  "seatpilot": {
    "brand": {
      "primary": { "value": "#145DA0" },
      "secondary": { "value": "#0C3C78" },
      "accent": { "value": "#FF7A59" },
      "success": { "value": "#27AE60" },
      "warning": { "value": "#F2994A" },
      "danger": { "value": "#D64545" }
    },
    "surface": {
      "background": { "value": "#0F172A" },
      "panel": { "value": "#1E293B" },
      "panelElevated": { "value": "#273449" },
      "overlay": { "value": "rgba(15, 23, 42, 0.6)" }
    },
    "text": {
      "primary": { "value": "#F8FAFC" },
      "secondary": { "value": "#CBD5F5" },
      "inverse": { "value": "#0F172A" },
      "muted": { "value": "#94A3B8" }
    },
    "spacing": {
      "xs": { "value": "4px" },
      "sm": { "value": "8px" },
      "md": { "value": "12px" },
      "lg": { "value": "16px" },
      "xl": { "value": "24px" },
      "xxl": { "value": "32px" }
    },
    "radius": {
      "none": { "value": "0px" },
      "sm": { "value": "4px" },
      "md": { "value": "8px" },
      "lg": { "value": "12px" },
      "pill": { "value": "999px" }
    },
    "typography": {
      "fontFamilyBase": { "value": "\"Inter\", \"SF Pro Text\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif" },
      "fontFamilyMono": { "value": "\"JetBrains Mono\", \"SF Mono\", ui-monospace, monospace" },
      "lineHeightTight": { "value": 1.2 },
      "lineHeightNormal": { "value": 1.5 },
      "lineHeightRelaxed": { "value": 1.8 },
      "fontSizeXs": { "value": "12px" },
      "fontSizeSm": { "value": "14px" },
      "fontSizeMd": { "value": "16px" },
      "fontSizeLg": { "value": "18px" },
      "fontSizeXl": { "value": "22px" },
      "fontSizeDisplay": { "value": "32px" }
    },
    "motion": {
      "press": { "value": "100ms ease-out" },
      "overlay": { "value": "150ms ease-in" },
      "attention": { "value": "250ms cubic-bezier(0.4, 0, 0.2, 1)" },
      "pinArrival": { "value": "200ms cubic-bezier(0.2, 1, 0.2, 1)" }
    },
    "elevation": {
      "none": { "value": "0 0 0 rgba(0,0,0,0)" },
      "sm": { "value": "0 2px 8px rgba(15, 23, 42, 0.35)" },
      "md": { "value": "0 8px 24px rgba(11, 19, 35, 0.45)" },
      "lg": { "value": "0 16px 48px rgba(8, 13, 25, 0.6)" }
    },
    "component": {
      "button": {
        "default": {
          "background": { "value": "{seatpilot.brand.primary.value}" },
          "text": { "value": "{seatpilot.text.primary.value}" },
          "radius": { "value": "{seatpilot.radius.md.value}" },
          "paddingInline": { "value": "{seatpilot.spacing.lg.value}" },
          "paddingBlock": { "value": "{seatpilot.spacing.sm.value}" }
        },
        "secondary": {
          "background": { "value": "{seatpilot.surface.panel.value}" },
          "border": { "value": "1px solid #3B82F6" },
          "text": { "value": "{seatpilot.text.primary.value}" }
        }
      },
      "statCard": {
        "background": { "value": "{seatpilot.surface.panelElevated.value}" },
        "border": { "value": "1px solid rgba(148, 163, 184, 0.16)" },
        "radius": { "value": "{seatpilot.radius.lg.value}" },
        "padding": { "value": "{seatpilot.spacing.xl.value}" }
      }
    }
  }
}
