{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "allowImportingTsExtensions": true
  },
  "include": ["app/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx", "lib/**/*.ts"]
}
