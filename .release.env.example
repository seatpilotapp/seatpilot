# SeatPilot Release Toolkit environment configuration
# Copy this file to `.release.env` and replace placeholders with real values.
# Usage: `cp .release.env.example .release.env` && `source .release.env`

export PR_NUMBER=4                             # Release PR number (e.g. 4)
export RELEASE_TAG=v1.0.0-prod-r1              # Tag to create/push
export COMPOSE=docker-compose.prod.yml         # Compose file for deploy

# Supabase database URL with sslmode=require (never commit the real value)
export SUPABASE_DB_URL="postgresql://postgres:<password>@db.<ref>.supabase.co:5432/postgres?sslmode=require"

# Metrics API access for seeding Ops Live dashboards
export METRICS_API_BASE_URL="http://localhost:9100"  # Replace if running remotely
export METRICS_API_KEY="<seatpilot_metrics_api_key>"

# Optional: override defaults when seeding Ops Live
# export SEED_TENANT=demo
# export SEED_CHANNEL=kiosk
