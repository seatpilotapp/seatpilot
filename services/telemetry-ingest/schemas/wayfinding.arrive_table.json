    "ts_ms": { "type": "integer", "minimum": 1 },
    "tenant_id": { "type": "string", "format": "uuid" },
    "session_id": { "type": "string" },
    "event_meta": { "type": "object" },
    "payload": {
      "type": "object",
      "required": ["table_id", "confirm_mode"],
      "properties": {
        "table_id": { "type": "string" },
        "confirm_mode": { "type": "string", "enum": ["qr", "tap"] }
