{
  "$schema": "https://seatpilot.dev/schemas/tokens.v1.json",
  "meta": {
    "brand": "SeatPilot",
    "version": "0.1.0",
    "updated_at": "2025-10-20"
  },
  "global": {
    "font": {
      "family": {
        "base": "Inter, system-ui, -apple-system, BlinkMacSystemFont, sans-serif"
      },
      "size": {
        "xs": "12px",
        "sm": "14px",
        "md": "16px",
        "lg": "20px",
        "xl": "24px",
        "xxl": "32px"
      },
      "weight": {
        "regular": 400,
        "medium": 500,
        "bold": 700
      }
    },
    "space": {
      "xxs": "4px",
      "xs": "6px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px"
    },
    "radius": {
      "sm": "6px",
      "md": "10px",
      "lg": "16px"
    },
    "shadow": {
      "elevation-1": "0 1px 4px rgba(15,42,53,0.12)",
      "elevation-2": "0 4px 18px rgba(15,42,53,0.16)"
    }
  },
  "color": {
    "base": {
      "ink": "#0F2A35",
      "teal": "#0AA2B1",
      "blue": "#0C67B1",
      "orange": "#F28A1C",
      "red": "#E4222A",
      "gray-900": "#0F1C21",
      "gray-700": "#4A4F53",
      "gray-500": "#7D878D",
      "gray-200": "#D7E0E3",
      "gray-050": "#F5F7F8",
      "white": "#FFFFFF"
    },
    "semantic": {
      "brand": {
        "primary": "{color.base.ink}",
        "accent": "{color.base.teal}"
      },
      "surface": {
        "default": "{color.base.white}",
        "muted": "{color.base.gray-050}",
        "inverse": "{color.base.ink}"
      },
      "text": {
        "default": "{color.base.ink}",
        "subtle": "{color.base.gray-700}",
        "inverse": "{color.base.white}"
      },
      "status": {
        "success": "#1BA26B",
        "info": "{color.base.blue}",
        "warning": "{color.base.orange}",
        "error": "{color.base.red}"
      }
    }
  },
  "state": {
    "focus": {
      "ringWidth": "2px",
      "ringColor": "{color.semantic.status.info}",
      "offset": "2px"
    },
    "tapTargetMin": "44px",
    "animation": {
      "durationFast": "120ms",
      "durationBase": "180ms",
      "easing": "cubic-bezier(0.25, 0.1, 0.25, 1)"
    }
  },
  "components": {
    "button": {
      "height": {
        "sm": "40px",
        "md": "48px"
      },
      "padding": {
        "sm": "0 16px",
        "md": "0 20px"
      },
      "variants": {
        "primary": {
          "bg": "{color.semantic.brand.primary}",
          "text": "{color.semantic.text.inverse}"
        },
        "secondary": {
          "bg": "{color.semantic.surface.muted}",
          "text": "{color.semantic.text.default}"
        },
        "ghost": {
          "bg": "transparent",
          "text": "{color.semantic.brand.accent}"
        }
      }
    },
    "badge": {
      "radius": "{global.radius.sm}",
      "padding": "0 8px",
      "variants": {
        "success": "{color.semantic.status.success}",
        "info": "{color.semantic.status.info}",
        "warning": "{color.semantic.status.warning}",
        "error": "{color.semantic.status.error}"
      }
    }
  },
  "icon": {
    "grid": 24,
    "stroke": 1.5
  }
}
